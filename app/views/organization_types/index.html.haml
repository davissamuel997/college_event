%section{'ng-controller' => "OrganizationTypesController"}
  / START Page content
  .content-wrapper
    %h3
      RSO Types
      .pull-right
        %a.btn.btn-sm.btn-info{:href => "/organization_types/new"} New RSO Type
    .row
      / START dashboard main content
      %section.col-md-12
        / START chart
        .row
          .content
            .col-md-12
              .panel
                .panel-body
                  .viewcode-example
                    .table-responsive
                      %div{'ng-if' => 'requestControl.organization_types.length > 0 && loaderControl.isLoading === false'}
                        %table.table.table-striped.table-bordered.table-hover
                          %thead
                            %tr
                              %th.text-center
                                %strong Name
                              %th.text-center
                                %strong Description
                              %th.text-center

                          %tbody
                            %tr{'ng-repeat' => 'organization_type in requestControl.organization_types'}
                              %td.text-center
                                %button.btn.btn-link.make-black
                                  {{organization_type.name}}
                              %td.text-center
                                %button.btn.btn-link.make-black
                                  {{organization_type.description}}
                              %td.text-center
                                %a.btn.btn-xs.btn-warning{'ng-href' => "/organization_types/{{organization_type.id}}/edit"} Edit

                        .span
                          .pull-right
                            .pagination-wrapper
                              %ul.pagination
                                %li{ 'ng-repeat' => 'page in requestControl.pagination.relevant_pages', 'ng-class' => "{active: page == requestControl.current_page}" }
                                  %a.btn{ 'ng-show' => '$first && requestControl.current_page != page', 'ng-click' => "requestControl.changePage(page)" } &lt;&lt;

                                  %a.btn.disabled{ 'ng-show' => '$index > 0 && (page - requestControl.pagination.relevant_pages[$index-1]) > 1' } ...

                                  %a.btn{ 'ng-click' => "requestControl.changePage(page)" }
                                    {{ page }}
                                  %a.btn{ 'ng-show' => '$last && requestControl.current_page!=page', 'ng-click' => "requestControl.changePage(page)" } &gt;&gt;

                      %div{'ng-if' => 'requestControl.organization_types.length === 0 && loaderControl.isLoading === false'}
                        %h4 Currently, there are organization types.

                      %div{'ng-if' => 'loaderControl.isLoading === true'}
                        .loader-css
                          .load-container.load8
                            .loader
                              Loading...
                          %h5 Fetching Organization Types...

                    %a.btn-view-code{:href => "javascript:;", :style => "display: none;"}
                      %i.fa.fa-code


